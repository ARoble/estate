<!DOCTYPE html>
<html lang="zxx">
 <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1"
    />

    <title><%= title %></title>

    <!-- Custom CSS -->
    <link href="/public/css/styles.css" rel="stylesheet" />

    <!-- Custom Color Option -->
    <link href="/public/css/colors.css" rel="stylesheet" />
  </head>

  <body class="blue-skin">
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div id="preloader">
      <div class="preloader"><span></span><span></span></div>
    </div>

    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper">
      <!-- ============================================================== -->
      <!-- Top header  -->
      <!-- ============================================================== -->
      <%- include('partials/header') %>
      <div class="clearfix"></div>
      <!-- ============================================================== -->
      <!-- Top header  -->
      <!-- ============================================================== -->

      <!-- ============================ Page Title Start================================== -->
      <div class="page-title">
        <div class="container">
          <div class="row">
            <div class="col-lg-12 col-md-12">
              <h2 class="ipt-title">Submit Property</h2>
              <span class="ipn-subtitle">Just Submit Your Property</span>
            </div>
          </div>
        </div>
      </div>
      <!-- ============================ Page Title End ================================== -->

      <!-- ============================ Submit Property Start ================================== -->
      <section class="gray-simple">
        <div class="container">
          <div class="row">
            <div class="col-lg-12 col-md-12">
              <div class="alert alert-danger" role="alert" id="alert-box" style="display:none">
                <p class="alert-text">
                 <b>Fill out all the required fields</b>
                
                 
                </p>
              </div>
            </div>
			
        

			  
            <!-- Submit Form -->
            <div class="col-lg-12 col-md-12">
              <% if(formType == 'add'){ %> 
				<form action="/property/add" id="property-form" method="POST" name="myForm"   enctype="multipart/form-data">
            <% } else if(formType == 'edit') {%>
              <form action="/property/edit/<%=property.slug%>" id="property-form-edit"  method="POST" name="myForm"  >
              <% } %>
          
          <div class="submit-page">
                <!-- Basic Information -->
                <div class="form-submit">
                  <h3>Basic Information</h3>
                  <div class="submit-section">
                    <div class="row">
                      <div class="form-group col-md-12" >
                        <label
                          >Property Title <small id="required" style="color:red">* Required</small></label>
                        <input type="text" class="form-control" name="title" id="title" <% if(formType == 'edit'){ %> value="<%=property.title%>" <% } %>/>
                      </div>

                      <div class="form-group col-md-6" id="property-form">
                        <label>Property Type<small class="required" style="color:red">* Required</small></label>
                        <select id="ptypes" class="form-control" name="propertyType" >
                          <option value="">&nbsp;</option>
                          <option value="House" <% if(formType == 'edit' && property.propertyType =='House'){ %> selected <% } %>>House</option>
                          <option value="Office" <% if(formType == 'edit' && property.propertyType =='Office'){ %> selected <% } %>>Office</option>
                          <option value="Land" <% if(formType == 'edit' && property.propertyType =='Land'){ %> selected <% } %>>Land</option>
                        </select>
                      </div>

					  <div class="form-group col-md-6" id="yeah">
                        <label>Status<small class="required" style="color:red">* Required</small></label>
                        <select id="status" class="form-control" name="status" >
                          <option value="">&nbsp;</option>
                          <option value="rent" <% if(formType == 'edit' && property.status =='rent'){ %> selected <% } %>>For Rent</option>
                          <option value="sale" <% if(formType == 'edit' && property.status =='sale'){ %> selected <% } %>>For Sale</option>
                        </select>
                      </div>

                      <div class="form-group col-md-6" >
                        <label>Price<small class="required" style="color:red">* Required</small></label>
                        <input
                          type="number"
                          class="form-control"
                          placeholder="USD"
						  name="price" id="price"<% if(formType == 'edit'){ %> value="<%=property.price%>" <% } %>
                        />
                      </div>

                      <div class="form-group col-md-6">
                        <label>Area<small class="required" style="color:red">* Required</small></label>
                        <input type="text" class="form-control" name="area" id="area" <% if(formType == 'edit'){ %> value="<%=property.area%>" <% } %>/>
                      </div>

					  <div class="form-group col-md-6" id="bed">
                        <label>Bedrooms<small id="required-bed" style="color:red;display:none">* Required</small></label>
                        <input type="number" class="form-control" name="bedrooms" id="bedrooms" <% if(formType == 'edit'){ %> value="<%=property.bedrooms%>" <% } %>/>
                      </div>

					  <div class="form-group col-md-6" id="bath">
                        <label>Bathrooms<small id="required-bath" style="color:red;display:none">* Required</small></label>
                        <input type="number" class="form-control" name="bathrooms" id="bathrooms" <% if(formType == 'edit'){ %> value="<%=property.bathrooms%>" <% } %>/>
                      </div>
                     
                      <% if(formType == 'add'){ %>
					  <div class="form-group col-md-6" >
                        <label>imageCover<small class="required" style="color:red">* Required</small></label>
                        <input type="file"  name="imageCover" id="imageCover" >
                      </div>
					  <div class="form-group col-md-6" >
                        <label>Images</label>
                        <input type="file"  id="myfile" name="images" id="images" multiple>
                      </div>

                      <div class="form-group col-md-6" >
                        <label>Drone Footage</label>
                        <input type="file"  id="myfile" name="droneFootage" id="droneFootage" >
                      </div>
<% } %>
                    </div>
                  </div>
                </div>


                <!-- Location -->
                <div class="form-submit">
                  <h3>Location</h3>
                  <div class="submit-section">
                    <div class="row">
                      <div class="form-group col-md-6">
                        <label>Address<small class="required" style="color:red">* Required</small></label>
                        <input type="text" class="form-control" name="address" id="address" <% if(formType == 'edit'){ %> value="<%=property.address%>" <% } %>/>
                      </div>

                      <div class="form-group col-md-6">
                        <label>Neighbourhood<small class="required" style="color:red">* Required</small></label>
                        <input type="text" class="form-control" name="neighbourhood" id="neighbourhood" <% if(formType == 'edit'){ %> value="<%=property.neighbourhood%>" <% } %>/>
                      </div>

                      <div class="form-group col-md-6">
                        <label>City<small class="required" style="color:red">* Required</small></label>
                        <select id="city" class="form-control" name="city" >
							<option value="">&nbsp;</option>
							<option value="Hargeisa" <% if(formType == 'edit' && property.city =='Hargeisa'){ %> selected <% } %>>Hargeisa</option>
							<option value="Burco" <% if(formType == 'edit' && property.city =='Burco'){ %> selected <% } %>>Burco</option>
							<option value="Berbera" <% if(formType == 'edit' && property.city =='Berbera'){ %> selected <% } %>>Berbera</option>
							<option value="Laas Anood" <% if(formType == 'edit' && property.city =='Laas Anood'){ %> selected <% } %>>Laas Anood</option>
							<option value="Ceerigaabo" <% if(formType == 'edit' && property.city =='Ceerigaabo'){ %> selected <% } %>>Ceerigaabo</option>
							<option value="Bosaaso" <% if(formType == 'edit' && property.city =='Bosaaso'){ %> selected <% } %>>Bosaaso</option>
						  </select>
                      </div>

                    </div>
                  </div>
                </div>

                <!-- Detailed Information -->
                <div class="form-submit">
                  <h3>Detailed Information</h3>
                  <div class="submit-section">
                    <div class="row">
                      <div class="form-group col-md-12">
                        <label>Description<small class="required" style="color:red">* Required</s,all></label>
                        <textarea class="form-control h-120" name="description" id="description"><% if(formType == 'edit'){ %><%=property.description%> <% } %></textarea>
                      </div>

                     

                      <div class="form-group col-md-12">
                        <label>Other Features (optional)</label>
                        <div class="o-features">
                          <ul class="no-ul-list third-row">
                            <li>
                              
                              <input
                                id="a-1"
                                class="checkbox-custom"
                                name="water"
								value="true"
                                type="checkbox"
                                <% if(formType == 'edit' && property.water){%> 
                                  checked
                                  <%}%>
                              />
                              <label for="a-1" class="checkbox-custom-label"
                                >Water</label
                              >
                            </li>
                            <li>
                              <input
                                id="a-2"
                                class="checkbox-custom"
                                name="garage"
								value="true"
                                type="checkbox"
                                <% if(formType == 'edit' && property.garage){%> 
                                  checked
                                  <%}%>
                              />
                              <label for="a-2" class="checkbox-custom-label"
                                >Garage</label
                              >
                            </li>
                            <li>
                              <input
                                id="a-3"
                                class="checkbox-custom"
                                name="tiles"
								value="true"
                                type="checkbox"
                                <% if(formType == 'edit' && property.tiles){%> 
                                  checked
                                  <%}%>
                              />
                              <label for="a-3" class="checkbox-custom-label"
                                >Tiles</label
                              >
                            </li>
                            <li>
                              <input
                                id="a-4"
                                class="checkbox-custom"
                                name="furnished"
								value="true"
                                type="checkbox"
                                <% if(formType == 'edit' && property.furnished){%> 
                                  checked
                                  <%}%>
                              />
                              <label for="a-4" class="checkbox-custom-label"
                                >Furnished</label
                              >
                            </li>
                            <li>
                              <input
                                id="a-5"
                                class="checkbox-custom"
                                name="kitchenOutside"
								value="true"
                                type="checkbox"
                                <% if(formType == 'edit' && property.kitchenOutside){%> 
                                  checked
                                  <%}%>
                              />
                              <label for="a-5" class="checkbox-custom-label"
                                >Kitchen Outside</label
                              >
                            </li>
                            <li>
                             <!-- extra-->
                            </li>
                           
                          </ul>
                        </div>
                      </div>
					  <div class="form-group col-lg-12 col-md-12">
						<button class="btn btn-theme-light-2 rounded" type="submit" >
						  Submit & Preview
						</button>
					  </div>
                    </div>
                  </div>
                </div>

              
        </div>
	</form>
			</div>
      </section>
      <!-- ============================ Submit Property End ================================== -->

        </form>
      <!-- ============================ Footer Start ================================== -->
      <%- include('partials/footer') %>
      <!-- ============================ Footer End ================================== -->

      <a id="back2Top" class="top-scroll" title="Back to top" href="#"
        ><i class="ti-arrow-up"></i
      ></a>
    </div>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->

    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <script src="/public/js/jquery.min.js"></script>
    <script src="/public/js/popper.min.js"></script>
    <script src="/public/js/bootstrap.min.js"></script>
    <script src="/public/js/rangeslider.js"></script>
    <script src="/public/js/select2.min.js"></script>
    <script src="/public/js/jquery.magnific-popup.min.js"></script>
    <script src="/public/js/slick.js"></script>
    <script src="/public/js/slider-bg.js"></script>
    <script src="/public/js/lightbox.js"></script>
    <script src="/public/js/imagesloaded.js"></script>

    <script src="/public/js/custom.js"></script>
	<script src="/public/js/script.js"></script>
    <!-- ============================================================== -->
    <!-- This page plugins -->
    <!-- ============================================================== -->

    <script src="/public/js/dropzone.js"></script>
    <!-- New Js -->
  </body>

</html>
